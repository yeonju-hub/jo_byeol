<div id="wrap">
	<header id="header">
		<div class="logo">
			<a href="<%= root_path %>"><img src="<%= asset_path 'logo1.jpg' %>" ></a>
		</div>
		<div class="strong">
			<strong>회원가입</strong>
		</div>
	</header>
	
	<div class="back">
		
		<br><br><br><br>
		<div class="sign_up center-block">
			<div class="box center-block">
				<br>
				<h2 style="text-align:center;">회원가입</h2>

				<br>

				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				  <%= render "devise/shared/error_messages", resource: resource %>

				  <div class="field d-grid gap-2">
					이메일<br>
					<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				  </div>
				<br>

				  <div class="field d-grid gap-2">
					비밀번호<br>
					
					<%= f.password_field :password, autocomplete: "new-password" %>
				  </div>
				
				<div class="password_notice">	
					<% if @minimum_password_length %>
						<p>&nbsp;&nbsp;&nbsp;※ 최소 <%= @minimum_password_length %>자 이상</p>
					<% end %>
				</div>
				<br><br><br>

				  <div class="field d-grid gap-2">
					비밀번호 확인<br>
					<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
				  </div>
				<br>

					<div class="field d-grid gap-2">
						이름<br>
						<%= f.text_field :name, autocomplete: "name" %>
					</div>
				<br>

					<div class="field d-grid gap-2">
						학번<br>
						<%= f.text_field :number, autocomplete: "number" %>
					</div>
				<br>

				 <div class="d-grid gap-2">
				 	<button class="btn btn-lg btn-default" type="submit" style="background:#1C1C1C; color:#F9FAFA;">회원가입</button>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>