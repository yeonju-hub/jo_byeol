<div id="wrap">
	<header id="header">
		<div class="logo">
			<a href="<%= root_path %>"><img src="<%= asset_path 'logo1.jpg' %>" ></a>
		</div>
		<div class="strong">
			<strong>프로필 수정</strong>
		</div>
		<a href="https://jo-byeol-mbjdm.run.goorm.io/users/edit">
					<div class="user" style="width:3%;">
						<p style="margin-top:15px; font-size:17px;">
							<%= current_user.name %>
						</p>
					</div>
				</a>
	</header>
	
	<div class="back">
		
		<br><br>
		<div class="user_edit center-block">
			<div class="box center-block">
				<br>
				<h2 style="text-align:center;">프로필 수정</h2>

				<br>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		  <%= render "devise/shared/error_messages", resource: resource %>

		  <div class="field d-grid gap-2">
			이메일<br />
			<%= f.email_field :email, autofocus: true, autocomplete: "이메일" %>
		  </div>
				

		  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
		  <% end %>

				
				
		  <div class="field d-grid gap-2">
			새로운 비밀번호
			  <br />
			<%= f.password_field :password, autocomplete: "new-password" %>
			<div class="password_notice">	
				<p>
					<% if @minimum_password_length %>
						&nbsp;&nbsp;&nbsp;※ 최소 <%= @minimum_password_length %>자 이상<br><br>
					<% end %>
						&nbsp;&nbsp;&nbsp;※ 비밀번호를 변경하고 싶지 않으시다면 <br>
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;비워두세요.
				</p>
			</div>
		  </div>
				
				

		  <div class="field d-grid gap-2">
			비밀번호 확인<br />
			<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
		  </div>

				
				
		  <div class="field d-grid gap-2">
			현재 비밀번호<br />  
			<%= f.password_field :current_password, autocomplete: "current-password" %>
			  
			  <div class="password_notice" style="height:45px;">	
				<p>&nbsp;&nbsp;&nbsp;※ 비밀번호 변경을 위해 필요합니다.</p>
			  </div>
		  </div>

				
				
			<div class="field d-grid gap-2">
				이름<br />
				<%= f.text_field :name, autocomplete: "name" %>
			</div>

				
				
			<div class="field d-grid gap-2">
				학번<br />
				<%= f.text_field :number, autocomplete: "number" %>
			</div>

				
			<br>	
		  <div class="d-grid gap-2">
			<button class="btn btn-lg btn-default" type="submit" style="background:#1C1C1C; color:#F9FAFA;">수정하기</button>
		  </div>
		<% end %>

		<br>
		<p> <%= link_to "탈퇴하시겠습니까?", registration_path(resource_name), data: { confirm: "정말 탈퇴하시겠습니까?" }, method: :delete %></p>
				
			</div>
		</div>
	</div>
</div>
