<%= form_with(model: comment, local: true) do |form| %>


  <div class="field">
    <%= form.label :post_id %>
    <%= form.text_field :post_id, value: params[:id] %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, value: current_user.id%>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
