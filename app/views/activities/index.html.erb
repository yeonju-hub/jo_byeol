<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>User</th>
      <th>Title</th>
      <th>Research</th>
      <th>Ppt</th>
      <th>Script</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
 		<td><%= activity.team_id %></td>
        <td><%= activity.user_id %></td>
        <td><%= activity.title %></td>
        <td><%= activity.research %></td>
        <td><%= activity.ppt %></td>
        <td><%= activity.script %></td>
        <td><%= activity.attachment %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

