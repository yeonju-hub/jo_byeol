<DOCTYPE html>
<html lang="ko">
<head>
	
</head>

<body>
	<div id="wrap">
		<div id="wrap_team">
			<header id="header">
				<div class="logo">
					<a href="<%= root_path %>"><img src="<%= asset_path 'logo.png' %>" ></a>
				</div>
			</header>
		</div>
		<div class="back">
			<div id="wrap_team" style="margin-top:2%;">
				<div class="category">
					<div class="team_main">
						<a href="http://jo-byeol-mbjdm.run.goorm.io/teams/<%= params[:team_id] %>"><%= Team.find(params[:team_id]).t_name %></a>
					</div>
					<nav class="nav">
						<ul>
							<li><a href="#">공지사항</a></li>
							<li><%= link_to "조별활동과정", activity_list_path(params[:team_id]), method: :post %></li>
							<li><%= link_to "일정관리", write_meeting_path(params[:team_id]), method: :post %></li>
								<% @admin.each do |admin| %>
									<% if admin.user_id == current_user.id %>
										<li><%= link_to "멤버관리", members_path(params[:team_id]), method: :post %></li>
										<li><%= link_to "팀관리", edit_team_path(params[:team_id]) %></li>
									<% end %>
								<% end %>
						</ul>
					</nav>
				</div>
				
				<div class="contents">
					<div class="activities">
						<button class="btn btn-default" type="button" style="width:100px; background:#B890D3; float:right;">
									<%= link_to "작성하기", write_activity_path(@team), method: :post, style: "text-decoration: none; color:#1C1C1C;" %></button><br><br><br>
						<table class="table table-hover">
							<thead>
								<tr>
									<th>제목</th>
									<th>작성자</th>
									<th>자료첨부</th>
								  <th colspan="3"></th>
								</tr>
							 </thead>

							<tbody>
								<% @activities.each do |activity| %>
								  <tr>
									<td><%= activity.title %></td>
									<td><%= User.find(activity.user_id).name %></td>

									  <%if activity.attachment.nil? %>
										<td>X</td>
									  <% else %>
										<td>O</td>
									  <% end %>

									  <td><%= link_to '보기', activity %></td>

								  </tr>
								<% end %>
							</tbody>
						</table>

					</div>
				</div>
			</div>
		</div>
	</div>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
